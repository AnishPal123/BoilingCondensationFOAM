    numberOfSubdomains 120;
    method hierarchical;
    hierarchicalCoeffs
    {
        n (4 5 6);
        delta 0.001;
        order xzy;
    }

    distributed true;
    roots
    (
    );
constraints
{
    processors
    {
        type    singleProcessorFaceSets;
        sets    ((bottom_nucleation -1));  // keep seedFaces on one processor
        enabled true;
    }
}

